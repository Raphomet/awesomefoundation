<h1>Editing project</h1>

<% form_for(@project) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.select :status, options_for_select( Project::STATUSES ) %>
  </p>
  <p>
    <%= f.label :funded_at %><br />
    <%= f.date_select :funded_at %>
  </p>
  <p>
    <%= f.label :chapter_id %><br />
    <%= f.select :chapter_id, options_for_select( Chapter.find(:all).map { |chapter| [chapter.name, chapter.id] } ) %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @project %> |
<%= link_to 'Back', projects_path %>